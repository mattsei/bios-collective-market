  <div class="column is-8">
<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= devise_error_messages! %>
  <div class="columns">
  <div class="column is-6">
    <div class="field is-horizontal">
      <div class="field-label is-small">
        <label class="label has-text-left">
          <%= f.label :username %>
        </label>
      </div>
      <div class="field-body">
        <div class="field">
          <%= f.text_field :username, value: current_user.username, class: "input is-small", type: "text" %>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-small">
        <label class="label has-text-left">
          <%= f.label :email %>
        </label>
      </div>
      <div class="field-body">
        <div class="field">
          <%= f.email_field :email, value: current_user.email, class: "input is-small", type: "email" %>
        </div>
      </div>
    </div>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <div>Currently waiting confirmation for:
        <%= resource.unconfirmed_email %>
      </div>
    <% end %>

    <div class="field is-horizontal">
      <div class="field-label is-small">
        <label class="label has-text-left">
          <%= f.label :password %>
        </label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <%= f.password_field :password, autocomplete: "off", class: "input is-small" %>
            <% if @minimum_password_length %>
              <em>
              <%= @minimum_password_length %> characters minimum</em>
            <% end %>
          </div>      
          <p class="help is-italic">(leave blank if you don't want to change it)</p>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-small">
        <label class="label has-text-left">
          <%= f.label :password_confirmation %>
        </label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <%= f.password_field :password_confirmation, autocomplete: "off", class: "input is-small" %>
          </div>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-small">
        <label class="label has-text-left">
          <%= f.label :current_password %>
        </label>
      </div>
      <div class="field-body">
        <div class="field">
          <div class="control">
            <%= f.password_field :current_password, autocomplete: "off", class: "input is-small" %>
          </div>
          <p class="help is-italic">(we need your current password to confirm your changes)</p>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit "Update" %>
    </div>

  <p>Unhappy?
    <%= button_to "Cancel my account", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %>
  </p>

  <%= link_to "Back", :back %>

</div>

<div class="column is-6">

    <div class="field is-horizontal">
      <div class="field-label is-small">
        <label class="label has-text-left">
          <%= f.label :first_name %>
        </label>
      </div>
      <div class="field-body">
        <div class="field">
          <%= f.text_field :first_name, value: current_user.first_name, class: "input is-small", type: "text" %>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-small">
        <label class="label has-text-left">
          <%= f.label :last_name %>
        </label>
      </div>
      <div class="field-body">
        <div class="field">
          <%= f.text_field :last_name, value: current_user.last_name, class: "input is-small", type: "text" %>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-small">
        <label class="label has-text-left">
          <%= f.label :address %>
        </label>
      </div>
      <div class="field-body">
        <div class="field">
          <%= f.text_field :address['street_address'], value: current_user.address['street_address'], class: "input is-small", type: "text" %>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-small">
        <label class="label has-text-left">
          <%= f.label :city %>
        </label>
      </div>
      <div class="field-body">
        <div class="field">
          <%= f.text_field :address['city'], value: current_user.address['city'], class: "input is-small", type: "text" %>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-small">
        <label class="label has-text-left">
          <%= f.label :state %>
        </label>
      </div>
      <div class="field-body">
        <div class="field">
          <%= f.text_field :address['state'], value: current_user.address['state'], class: "input is-small", type: "text" %>
        </div>
      </div>
    </div>

    <div class="field is-horizontal">
      <div class="field-label is-small">
        <label class="label has-text-left">
          <%= f.label :postcode %>
        </label>
      </div>
      <div class="field-body">
        <div class="field">
          <%= f.text_field :address['postcode'], value: current_user.address['postcode'], class: "input is-small", type: "text" %>
        </div>
      </div>
    </div>


  </div>
  <% end %>
  </div>
  
