<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div class="notification">
      <button class="delete"></button>
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li> - <%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <label class="label"><%= form.label :name %></label>
    <div class="control">
      <%= form.text_field :name, id: :product_name, class:"input", type:"text" %>
    </div>  
  </div>

  <div class="field">
    <label class="label"><%= form.label :price %></label>
    <div class="control">
      <%= form.text_field :price, id: :product_price, class:"input" %>
    </div>
  </div>

  <div class="field">
    <label class="label"><%= form.label :description %></label>
    <div class="control">
      <%= form.text_area :description, id: :product_description, class:"textarea", type:"text" %>
    </div>
  </div>

  <div class="field">
   <label class="label"><%= form.label :product_image %></label>
    <%= form.file_field :product_image %>
    <% if form.object.product_image? %>
      <%= image_tag form.object.product_image %>
      <%= form.label :remove_product_image %>
      <%= form.check_box :remove_product_image %> 
    <% end %>
  </div>

  <div class="actions">
    <%= form.submit class:"button"%>
  </div>
<% end %>
